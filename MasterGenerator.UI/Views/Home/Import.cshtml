@using Syncfusion.EJ2
@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{  
    var asyncSettings = new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl ="/Home/SaveExcel", RemoveUrl = "/Home/RemoveExcel" };  
}  
  
  
<div class="app-main__outer">
                    <div class="app-main__inner">
                        <div class="app-page-title">
                            <div class="page-title-wrapper">
                                <div class="page-title-heading">
                                    <div class="page-title-icon">
                                        <i class="pe-7s-graph text-success"></i>
                                    </div>
                                    <div>
                                        Import SCS Excel File
                                        <div class="page-title-subheading">Drag & drop or browse scs excel file.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                                <div class="main-card mb-3 card">
                                    <div class="card-body">
                                        <h5 class="card-title">Import</h5>
                                       <ejs-uploader id="uploadFiles" asyncSettings="@asyncSettings" multiple="false" autoUpload="false" ></ejs-uploader>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>