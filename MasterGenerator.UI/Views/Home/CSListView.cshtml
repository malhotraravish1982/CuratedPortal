@model MasterGenerator.Model.Model.ProjectModel
@{
    ViewData["Title"] = "CSListView";
}

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-graph text-success"></i>
                    </div>
                    <div>
                        CS Records
                        <div class="page-title-subheading">All imported SCS Excel file records.</div>
                    </div>
                </div>

            </div>
        </div>

        <div class="tab-content">
            <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">CS Records</h5>
                        <form class="">
                            <ejs-grid id="Grid"  allowPaging="true"  allowSorting="true" allowFiltering="true">
                                <e-grid-editSettings allowAdding="true" allowDeleting="true" allowEditing="true" mode="Normal"></e-grid-editSettings>
                                <e-grid-filterSettings type="Excel"></e-grid-filterSettings>
                                <e-data-manager url="/Home/UrlDataSource" crudUrl="/Home/CrudUpdate" adaptor="UrlAdaptor"></e-data-manager>
                                <e-grid-columns>
                                    <e-grid-column field="ProjectId" hidden headerText="Project Id" width="0"></e-grid-column>
                                    <e-grid-column field="CustomerName" headerText="Customer Name" width="100"></e-grid-column>
                                    <e-grid-column field="ProjectName" headerText="Project Name" width="100"></e-grid-column>
                                    <e-grid-column field="PONumber" headerText="PO Number" width="150"></e-grid-column>
                                    <e-grid-column field="PODate" headerText="PO Date" width="150"></e-grid-column>
                                    <e-grid-column field="TotalQuantity" headerText="Total Quantity" width="150"></e-grid-column>
                                    <e-grid-column field="Currency" headerText="Currency" width="150"></e-grid-column>
                                    <e-grid-column field="POAmount" headerText="PO Amount" width="150"></e-grid-column>
                                    <e-grid-column field="CSStatus" headerText="CS Status" width="150"></e-grid-column>
                                    <e-grid-column field="DisplayStatus" headerText="Display Status" width="150"></e-grid-column>
                                    <e-grid-column field="ShipmentMethod" headerText="Shipment Method" width="150"></e-grid-column>
                                    <e-grid-column field="ProductionCompletion" headerText="Production Completion" width="150"></e-grid-column>
                                    <e-grid-column field="VesselETA" headerText="Vessel ETA" width="150"></e-grid-column>
                                    <e-grid-column field="VesselETD" headerText="Vessel ETD" width="150"></e-grid-column>
                                    <e-grid-column field="EstimatedDeliveryDate" headerText="Estimated Delivery Date" width="150"></e-grid-column>
                                    <e-grid-column field="ActualDeliveryDate" headerText="Actual Delivery Date" width="150"></e-grid-column>
                                    <e-grid-column field="PreProductionManager" headerText="Pre Production Manager" width="150"></e-grid-column>
                                    <e-grid-column field="OnTimeStatus" headerText="On Time Status" width="150"></e-grid-column>
                                </e-grid-columns>
                            </ejs-grid>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

