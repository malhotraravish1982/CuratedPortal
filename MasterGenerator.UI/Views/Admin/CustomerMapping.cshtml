@model MasterGenerator.Model.Model.Customer
@{
    ViewData["Title"] = "CustomerMapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-graph text-success"></i>
                    </div>
                    <div>
                        Customer Mapping
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane tabs-animation fade active show" id="tab-content-1" role="tabpanel">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Customer Mapping</h5>
                        <form>
                            <div class="position-relative row form-group">
                                <label asp-for="UserName"  class="col-sm-2 col-form-label">User</label>
                                <div class="col-sm-10">
                                    <select asp-for="UserName"  class="form-control">
                                        @if (ViewBag.users != null)
                                        {
                                            @foreach (var user in ViewBag.users)
                                            {
                                                <option> @user.FirstName </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="position-relative row form-group">
                                <label asp-for="CustomerName" class="col-sm-2 col-form-label">Customer</label>
                                <div class="col-sm-10">
                                    <select asp-for="CustomerName" class="form-control">
                                        @if (ViewBag.users != null)
                                        {
                                            @foreach (var user in ViewBag.users)
                                            {
                                                <option> @user.FirstName </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="position-relative row form-check">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type='submit' class="btn btn-primary">Map</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>