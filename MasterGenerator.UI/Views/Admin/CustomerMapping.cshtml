@model MasterGenerator.Model.Model.CustomerModel
@{
    ViewData["Title"] = "CustomerMapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-graph text-success"></i>
                    </div>
                    <div>
                        Customer Mapping
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane tabs-animation fade active show" id="tab-content-1" role="tabpanel">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Customer Mapping</h5>
                        <form asp-action="CustomerMapping">
                            <div class="position-relative row form-group">
                                <label asp-for="UserId"  class="col-sm-2 col-form-label">User</label>
                                <div class="col-sm-10">
                                    <select asp-for="UserId"  class="form-control">
                                        @if (ViewBag.user != null)
                                        {
                                            @foreach (var user in ViewBag.user)
                                            {
                                                <option value="@user.Id"> @user.FirstName </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="position-relative row form-group">
                                <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer</label>
                                <div class="col-sm-10">
                                    <select asp-for="CustomerId" class="form-control">
                                        @if (ViewBag.customers != null)
                                        {
                                            @foreach (var customer in ViewBag.customers)
                                            {
                                                <option value="@customer.CustomerId"> @customer.CustomerName </option>       
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="position-relative row form-check">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type='submit' class="btn btn-primary">Map</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Start Customer Maped Grid-->
                 <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">@ViewData["Title"]</h5>     
                        <form asp-action="Index" id=frmEGrid class="">
                            <ejs-grid id="Grid"  AllowSelection="true" ShowColumnChooser="true" allowPaging="true" allowSorting="true" allowFiltering="true"                               
                                      toolbar="@(new List<string>() { "Delete" })">
                                <e-grid-editSettings allowDeleting="true" mode="Normal" showDeleteConfirmDialog="true"></e-grid-editSettings>
                                <e-grid-pagesettings pageSizes="@(new string[] { "20", "50", "100" , "All" })"></e-grid-pagesettings>
                                <e-grid-filterSettings type="Excel"></e-grid-filterSettings>
                                <e-data-manager url="/Admin/CustomerMapDataSource" crudUrl="/Admin/DeleteCustomerMapping" adaptor="UrlAdaptor"></e-data-manager>
                                <e-grid-columns>
                                    <e-grid-column field="Id" isPrimaryKey="true" AllowEditing="true" headerText="Id" width="50"></e-grid-column>
                                    <e-grid-column field="UserName" AllowEditing="true"  headerText="User Name" width="100"></e-grid-column>
                                    <e-grid-column field="CustomerName" AllowEditing="true"  headerText="Customer Name" width="100"></e-grid-column>    
                                </e-grid-columns>
                            </ejs-grid>
                        </form>
                    </div>
                </div>
        <!-- End Grid-->
    </div>
</div>